{
  "manifest_version": 3,
  "name": "AI News Credibility Checker",
  "version": "1.0",
  "description": "Real-time news credibility analysis with bias detection",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}